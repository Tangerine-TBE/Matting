<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:id="@+id/rootView"
        android:background="@drawable/shape_item_vip_price_n"
        android:layout_centerVertical="true">
        <LinearLayout
            android:id="@+id/topView"
            android:layout_width="0dp"
            android:layout_height="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_item_vip_price_top"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/fire"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_main_fire"
                android:layout_marginEnd="3dp"/>
            <TextView
                android:id="@+id/tv_top"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="0.5元/天"
                android:textColor="#FF5C3C"
                android:textSize="9sp"
                android:gravity="center"
                android:maxLines="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥14.88/月"
            android:textColor="#ff9f5e13"
            android:textSize="14sp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topView"
            android:layout_marginTop="12dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价30/月"
            android:textColor="#ff9f5e13"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_center"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>