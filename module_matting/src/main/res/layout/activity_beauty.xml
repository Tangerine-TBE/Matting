<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.BeautyActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/theme_bg">
        <ImageView
            android:id="@+id/barBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/save"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="保存"
            android:textColor="#ffffd23d"
            android:textSize="12sp"
            android:background="@drawable/shape_black_bg_corners_200"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"/>
    </RelativeLayout>
    <com.abc.matting.view.ZoomImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF8EF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_beauty_crop"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="裁剪旋转"
                    android:textColor="#ff272727"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:background="#FFD7A5"/>
            <LinearLayout
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_beauty_filter"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="滤镜"
                    android:textColor="#ff272727"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:background="#FFD7A5"/>
            <LinearLayout
                android:id="@+id/adjust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_beauty_adjust"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调整"
                    android:textColor="#ff272727"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:background="#FFD7A5"/>
            <LinearLayout
                android:id="@+id/addText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_beauty_crop"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文字"
                    android:textColor="#ff272727"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:background="#FFD7A5"/>
            <LinearLayout
                android:id="@+id/stickers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_beauty_crop"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贴纸"
                    android:textColor="#ff272727"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:background="#FFD7A5"/>
            <LinearLayout
                android:id="@+id/scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_beauty_scale"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缩放"
                    android:textColor="#ff272727"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="6dp"
                android:background="#FFD7A5"/>
            <LinearLayout
                android:id="@+id/doodle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_beauty_doodle"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="涂鸦"
                    android:textColor="#ff272727"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>