<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.StickerActivity"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_bg">
        <ImageView
            android:id="@+id/barBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>
        <ImageView
            android:id="@+id/reset"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_clean"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/redo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@color/white"
            android:layout_toStartOf="@id/reset"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/undo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@color/white"
            android:layout_toStartOf="@id/redo"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:visibility="invisible"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar"
        android:layout_above="@id/bottomView">
        <com.xiaopo.flying.sticker.StickerView
            android:id="@+id/stickerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:showBorder="true"
            app:showIcons="true"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/srcImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
        </com.xiaopo.flying.sticker.StickerView>
        <ImageView
            android:id="@+id/show"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_original"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape_crop_bottom_bg"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/free_sticker"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_free_sticker"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mosaic_y"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费帖纸"
                    android:textColor="#ffffffff"
                    android:textSize="9sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vip_sticker"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_vip_sticker"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_doodle_n"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门帖纸"
                    android:textColor="#ffffffff"
                    android:textSize="9sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/no"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_no"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="贴纸"
                android:gravity="center"
                android:textColor="#ffffd23d"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/yes"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_yes"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>