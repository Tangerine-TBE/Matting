<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_main_vip_dialog_bg_1"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@id/iv2"
        app:layout_constraintEnd_toEndOf="@id/iv2"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_main_vip_dialog_bg_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv1"/>
    <ImageView
        android:id="@+id/iv3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_main_vip_dialog_bg_3"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@id/iv2"
        app:layout_constraintEnd_toEndOf="@id/iv2"
        app:layout_constraintTop_toBottomOf="@id/iv2"/>
    <ImageView
        android:id="@+id/iv4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_main_vip_dialog_bg_4"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@id/iv2"
        app:layout_constraintEnd_toEndOf="@id/iv2"
        app:layout_constraintTop_toBottomOf="@id/iv3"/>
    <TextView
        android:id="@+id/tv_time_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="倒计时"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/iv2"
        app:layout_constraintTop_toTopOf="@id/iv2"
        app:layout_constraintBottom_toBottomOf="@id/iv2"
        app:layout_constraintEnd_toStartOf="@id/iv_time_bg_1"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <ImageView
        android:id="@+id/iv_time_bg_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_home_vip_dialog_time_bg"
        app:layout_constraintStart_toEndOf="@id/tv_time_tip"
        app:layout_constraintTop_toTopOf="@id/iv2"
        app:layout_constraintBottom_toBottomOf="@id/iv2"
        app:layout_constraintEnd_toStartOf="@id/tv_time_tip_2"/>
    <TextView
        android:id="@+id/tv_time_tip_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/iv2"
        app:layout_constraintBottom_toBottomOf="@id/iv2"
        app:layout_constraintStart_toEndOf="@id/iv_time_bg_1"
        app:layout_constraintEnd_toStartOf="@id/iv_time_bg_2"/>
    <ImageView
        android:id="@+id/iv_time_bg_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_home_vip_dialog_time_bg"
        app:layout_constraintStart_toEndOf="@id/tv_time_tip_2"
        app:layout_constraintTop_toTopOf="@id/iv2"
        app:layout_constraintBottom_toBottomOf="@id/iv2"
        app:layout_constraintEnd_toStartOf="@id/tv_time_tip_3"/>
    <TextView
        android:id="@+id/tv_time_tip_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/iv2"
        app:layout_constraintBottom_toBottomOf="@id/iv2"
        app:layout_constraintStart_toEndOf="@id/iv_time_bg_2"
        app:layout_constraintEnd_toStartOf="@id/iv_time_bg_3"/>
    <ImageView
        android:id="@+id/iv_time_bg_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_home_vip_dialog_time_bg"
        app:layout_constraintTop_toTopOf="@id/iv2"
        app:layout_constraintBottom_toBottomOf="@id/iv2"
        app:layout_constraintStart_toEndOf="@id/tv_time_tip_3"
        app:layout_constraintEnd_toEndOf="@id/iv2"/>
    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/iv_time_bg_1"
        app:layout_constraintEnd_toEndOf="@id/iv_time_bg_1"
        app:layout_constraintTop_toTopOf="@id/iv_time_bg_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_time_bg_1"/>
    <TextView
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/iv_time_bg_2"
        app:layout_constraintEnd_toEndOf="@id/iv_time_bg_2"
        app:layout_constraintTop_toTopOf="@id/iv_time_bg_2"
        app:layout_constraintBottom_toBottomOf="@id/iv_time_bg_2"/>
    <TextView
        android:id="@+id/second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/iv_time_bg_3"
        app:layout_constraintEnd_toEndOf="@id/iv_time_bg_3"
        app:layout_constraintTop_toTopOf="@id/iv_time_bg_3"
        app:layout_constraintBottom_toBottomOf="@id/iv_time_bg_3"/>
    <TextView
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:text="立即购买"
        android:textColor="#ff272727"
        android:textSize="14sp"
        android:background="@drawable/shape_main_vip_dialog_btn_bg"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/iv4"
        app:layout_constraintEnd_toEndOf="@id/iv4"
        app:layout_constraintTop_toTopOf="@id/iv4"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:elevation="1dp"/>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main_vip_close"
        app:layout_constraintTop_toTopOf="@id/iv1"
        app:layout_constraintEnd_toEndOf="@id/iv1"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>