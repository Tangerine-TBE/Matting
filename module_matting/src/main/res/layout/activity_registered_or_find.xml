<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RegisteredOrFindActivity"
    android:background="@drawable/shape_login_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="40dp">
        <ImageView
            android:id="@+id/barBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/barTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_white_bg_16dp">
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册"
                android:textColor="#ff272727"
                android:textSize="18sp"
                android:layout_marginTop="42dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_gray_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_text"
                android:layout_marginTop="43dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_gray_bg"
                app:layout_constraintStart_toStartOf="@id/view1"
                app:layout_constraintEnd_toEndOf="@id/view1"
                app:layout_constraintTop_toBottomOf="@id/view1"
                android:layout_marginTop="15dp"/>
            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_gray_bg"
                app:layout_constraintStart_toStartOf="@id/view1"
                app:layout_constraintEnd_toEndOf="@id/view1"
                app:layout_constraintTop_toBottomOf="@id/view2"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/registerBtn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:text="注册"
                android:textColor="#ff272727"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="114dp"
                app:layout_constraintStart_toStartOf="@id/view1"
                app:layout_constraintEnd_toEndOf="@id/view1"
                app:layout_constraintTop_toBottomOf="@id/view3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="57dp"
                android:background="@drawable/shape_yellow_round_bt" />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="号码"
                android:textColor="#ff272727"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/view1"
                app:layout_constraintTop_toTopOf="@id/view1"
                app:layout_constraintBottom_toBottomOf="@id/view1"
                android:layout_marginStart="17dp"/>
            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="#ff272727"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/view2"
                app:layout_constraintBottom_toBottomOf="@id/view2"
                android:layout_marginStart="17dp"/>
            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="#ff272727"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/view3"
                app:layout_constraintTop_toTopOf="@id/view3"
                app:layout_constraintBottom_toBottomOf="@id/view3"
                android:layout_marginStart="17dp"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/tv_code"/>
            <TextView
                android:id="@+id/codeBtn"
                android:layout_width="95dp"
                android:layout_height="45dp"
                android:text="获取验证码"
                android:textColor="#ff272727"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/shape_login_code_bg"
                app:layout_constraintTop_toTopOf="@id/view2"
                app:layout_constraintBottom_toBottomOf="@id/view2"
                app:layout_constraintEnd_toEndOf="@id/view2"/>
            <EditText
                android:id="@+id/etUserName"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@null"
                android:hint="请输入你的手机号"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="#1a1a1a"
                android:textColorHint="#b4b4b4"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:paddingStart="20dp"
                android:paddingEnd="16dp"
                app:layout_constraintStart_toStartOf="@id/line"
                app:layout_constraintEnd_toEndOf="@id/view1"
                app:layout_constraintTop_toTopOf="@id/view1"
                app:layout_constraintBottom_toBottomOf="@id/view1"/>
            <EditText
                android:id="@+id/etUserCode"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:hint="请输入验证码"
                android:inputType="text"
                android:maxLength="5"
                android:maxLines="1"
                android:textColor="#1a1a1a"
                android:textColorHint="#b4b4b4"
                android:textSize="15sp"
                android:paddingStart="20dp"
                android:paddingEnd="16dp"
                app:layout_constraintStart_toStartOf="@id/line"
                app:layout_constraintEnd_toStartOf="@id/codeBtn"
                app:layout_constraintTop_toTopOf="@id/view2"
                app:layout_constraintBottom_toBottomOf="@id/view2"/>
            <EditText
                android:id="@+id/etUserPwd"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"
                android:maxLength="18"
                android:maxLines="1"
                android:textColor="#1a1a1a"
                android:textColorHint="#b4b4b4"
                android:textSize="15sp"
                android:paddingStart="20dp"
                android:paddingEnd="16dp"
                app:layout_constraintStart_toStartOf="@id/etUserName"
                app:layout_constraintEnd_toEndOf="@id/etUserName"
                app:layout_constraintTop_toTopOf="@id/view3"
                app:layout_constraintBottom_toBottomOf="@id/view3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>