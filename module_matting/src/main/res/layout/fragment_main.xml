<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_anim"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/banner_gif_comic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_fire"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门工具"
                android:textColor="#ff272727"
                android:textSize="14sp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_fire"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="view2,iv_manual,text2"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/portrait_matting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_portrait_matting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/face"
                app:layout_constraintBottom_toBottomOf="@id/face"/>
            <TextView
                android:id="@+id/portrait_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人像抠图"
                android:textColor="#ff272727"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/portrait_tip"
                app:layout_constraintEnd_toEndOf="@id/portrait_tip"
                app:layout_constraintBottom_toTopOf="@id/portrait_tip"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/portrait_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人像抠图更精细"
                android:textColor="#80272727"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/portrait_matting"
                app:layout_constraintBottom_toBottomOf="@id/portrait_matting"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="7dp"/>
            <ImageView
                android:id="@+id/face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_face"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/portrait_matting"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/face_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人脸特效"
                android:textColor="#ff272727"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/face_tip"
                app:layout_constraintEnd_toEndOf="@id/face_tip"
                app:layout_constraintBottom_toTopOf="@id/face_tip"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/face_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马上变身"
                android:textColor="#80272727"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/face"
                app:layout_constraintBottom_toBottomOf="@id/face"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="7dp"/>
            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="81dp"
                android:background="@drawable/shape_main_hot_bg"
                app:layout_constraintStart_toStartOf="@id/portrait_matting"
                app:layout_constraintTop_toBottomOf="@id/portrait_matting"
                app:layout_constraintEnd_toEndOf="@id/portrait_matting"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="17dp"/>
            <View
                android:id="@+id/view2"
                android:layout_width="104dp"
                android:layout_height="81dp"
                android:background="@drawable/shape_main_hot_bg"
                app:layout_constraintStart_toEndOf="@id/view1"
                app:layout_constraintEnd_toStartOf="@id/view3"
                app:layout_constraintTop_toTopOf="@id/view1"
                app:layout_constraintBottom_toBottomOf="@id/view1"/>
            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="81dp"
                android:background="@drawable/shape_main_hot_bg"
                app:layout_constraintStart_toStartOf="@id/face"
                app:layout_constraintEnd_toEndOf="@id/face"
                app:layout_constraintTop_toTopOf="@id/view1"
                app:layout_constraintBottom_toBottomOf="@id/view1"/>
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能抠图"
                android:textColor="#ff1a1a1a"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/view1"
                app:layout_constraintEnd_toEndOf="@id/view1"
                app:layout_constraintBottom_toBottomOf="@id/view1"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手动抠图"
                android:textColor="#ff1a1a1a"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/view2"
                app:layout_constraintEnd_toEndOf="@id/view2"
                app:layout_constraintBaseline_toBaselineOf="@id/text1"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美化图片"
                android:textColor="#ff1a1a1a"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/view3"
                app:layout_constraintEnd_toEndOf="@id/view3"
                app:layout_constraintBaseline_toBaselineOf="@id/text1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_intelligent_matting"
                app:layout_constraintStart_toStartOf="@id/view1"
                app:layout_constraintEnd_toEndOf="@id/view1"
                app:layout_constraintTop_toTopOf="@id/view1"
                app:layout_constraintBottom_toTopOf="@id/text1"/>
            <ImageView
                android:id="@+id/iv_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_manual_matting"
                app:layout_constraintStart_toStartOf="@id/view2"
                app:layout_constraintEnd_toEndOf="@id/view2"
                app:layout_constraintTop_toTopOf="@id/view2"
                app:layout_constraintBottom_toTopOf="@id/text2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_main_optimize_pic"
                app:layout_constraintStart_toStartOf="@id/view3"
                app:layout_constraintEnd_toEndOf="@id/view3"
                app:layout_constraintTop_toTopOf="@id/view3"
                app:layout_constraintBottom_toTopOf="@id/text3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F6F6F6"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常用小工具"
            android:textColor="#ff999999"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">
                <LinearLayout
                    android:id="@+id/tailoring"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_main_tailoring"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="图片剪裁"
                        android:textColor="#ff272727"
                        android:textSize="15sp"
                        android:layout_marginTop="11dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/filter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_main_filter"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加滤镜"
                        android:textColor="#ff272727"
                        android:textSize="15sp"
                        android:layout_marginTop="11dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/adjust"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_main_adjust"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="色调调整"
                        android:textColor="#ff272727"
                        android:textSize="15sp"
                        android:layout_marginTop="11dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/addText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_main_add_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加文字"
                        android:textColor="#ff272727"
                        android:textSize="15sp"
                        android:layout_marginTop="11dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="43dp">
                <LinearLayout
                    android:id="@+id/scale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_main_scale"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="放大缩小"
                        android:textColor="#ff272727"
                        android:textSize="15sp"
                        android:layout_marginTop="11dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/stickers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_main_stickers"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="精美贴纸"
                        android:textColor="#ff272727"
                        android:textSize="15sp"
                        android:layout_marginTop="11dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/doodle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_main_doodle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="马赛克涂鸦"
                        android:textColor="#ff272727"
                        android:textSize="15sp"
                        android:layout_marginTop="11dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F6F6F6"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的作品"
            android:textColor="#ff999999"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作品库"
            android:textColor="#ff272727"
            android:textSize="15sp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@drawable/shape_main_library_bg"
            android:layout_margin="24dp"
            android:padding="7dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/noData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="invisible">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_no_data"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片空空如也"
                    android:textColor="#ffc7c7c7"
                    android:textSize="12sp"
                    android:layout_marginTop="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快去使用工具，创造您的作品"
                    android:textColor="#ffc7c7c7"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>